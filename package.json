{
  "private": true,
  "name": "monorepo",
  "license": "MIT",
  "repository": "https://github.com/rehypejs/rehype-minify",
  "bugs": "https://github.com/rehypejs/rehype-minify/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "devDependencies": {
    "bail": "^1.0.1",
    "chalk": "^2.0.0",
    "dox": "^0.9.0",
    "execa": "^1.0.0",
    "hastscript": "^5.0.0",
    "is-hidden": "^1.0.1",
    "lerna": "^3.0.0",
    "mdast-zone": "^3.0.0",
    "negate": "^1.0.0",
    "nyc": "^13.0.0",
    "parse-author": "^2.0.0",
    "prettier": "^1.13.7",
    "rehype": "^6.0.0",
    "rehype-cli": "^6.0.0",
    "remark": "^10.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "strip-indent": "^2.0.0",
    "tape": "^4.6.0",
    "to-vfile": "^5.0.0",
    "trim": "0.0.1",
    "trim-trailing-lines": "^1.0.0",
    "trough": "^1.0.0",
    "uniq": "^1.0.1",
    "unist-builder": "^1.0.2",
    "vfile-find-down": "^4.0.0",
    "xo": "^0.23.0",
    "xtend": "^4.0.1"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build-packages": "node script/build-packages",
    "build": "npm run build-packages",
    "test-api": "tape test packages/*/test.js",
    "test-coverage": "nyc --reporter lcov tape test/index.js packages/*/test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off",
      "no-eq-null": "off",
      "eqeqeq": [
        2,
        "allow-null"
      ]
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
